<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Car_Booking">

    <RelativeLayout
        android:id="@+id/relly1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/top">

        <ImageView
            android:id="@+id/imgView_logo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            android:background="@drawable/car"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="145dp"
            android:fontFamily="sans-serif-medium"
            android:text="Car Booking"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relly2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relly1">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/text_boder"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:text="Please Enter Booking Details"
                android:textColor="@color/transparent"/>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_username"
                    android:layout_width="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_person_black_24dp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/text_boder"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_name"
                        android:hint="Name"
                        android:layout_width="250dp"
                        android:background="@drawable/text"
                        android:layout_height="30dp"
                        android:textColorHint="@color/gray"
                        android:textColor="@color/transparent"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="15dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15dp"
                        android:inputType="text"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_email"
                    android:layout_width="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_phone_black_24dp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/text_boder"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edit_number"
                        android:hint="Phone Number"
                        android:layout_width="250dp"
                        android:background="@drawable/text"
                        android:layout_height="30dp"
                        android:textColor="@color/transparent"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:textColorHint="@color/gray"
                        android:paddingRight="15dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15dp"
                        android:inputType="number"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_pass"
                    android:layout_width="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_credit_card_black_24dp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/text_boder"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">



                    <EditText
                        android:id="@+id/edit_nic"
                        android:hint="NIC Number"
                        android:layout_width="250dp"
                        android:background="@drawable/text"
                        android:layout_height="30dp"
                        android:textColor="@color/transparent"
                        android:textColorHint="@color/gray"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="15dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15dp"
                        android:inputType="number"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_vehicle_no"
                    android:layout_width="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_location_on_black_24dp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/text_boder"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/edit_address"
                        android:hint="Address"
                        android:layout_width="250dp"
                        android:background="@drawable/text"
                        android:layout_height="30dp"
                        android:textColor="@color/transparent"
                        android:layout_marginTop="2dp"
                        android:textColorHint="@color/gray"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="15dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15dp"
                        android:inputType="text"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_pin_drop_black_24dp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/text_boder"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/edit_drop_address"
                        android:hint="Drop Address"
                        android:layout_width="250dp"
                        android:background="@drawable/text"
                        android:layout_height="30dp"
                        android:textColor="@color/transparent"
                        android:layout_marginTop="2dp"
                        android:textColorHint="@color/gray"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="15dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15dp"
                        android:inputType="text"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_date_range_black_24dp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/text_boder"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/edit_date"
                        android:hint="Date"
                        android:layout_width="250dp"
                        android:background="@drawable/text"
                        android:layout_height="30dp"
                        android:textColor="@color/transparent"
                        android:layout_marginTop="2dp"
                        android:textColorHint="@color/gray"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="15dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15dp"
                        android:inputType="date"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_date_range_black_24dp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/text_boder"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/edit_days"
                        android:hint="No of Days"
                        android:layout_width="250dp"
                        android:background="@drawable/text"
                        android:layout_height="30dp"
                        android:textColor="@color/transparent"
                        android:layout_marginTop="2dp"
                        android:textColorHint="@color/gray"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="15dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15dp"
                        android:inputType="number"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_vehicle_type"
                    android:layout_width="30dp"
                    android:layout_marginLeft="7dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_monetization_on_black_24dp"/>

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:background="@drawable/text_boder"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">



                    <EditText
                        android:id="@+id/edit_amount"
                        android:hint="Amount"
                        android:layout_width="250dp"
                        android:background="@drawable/text"
                        android:layout_height="30dp"
                        android:textColor="@color/transparent"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="10dp"
                        android:textColorHint="@color/gray"
                        android:paddingRight="15dp"
                        android:fontFamily="sans-serif-light"
                        android:textSize="15dp"
                        android:editable="false"
                        android:inputType="text"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginTop="70dp"
            android:background="@drawable/button_background"
            android:text="Book my Car"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textSize="16dp"/>

    </RelativeLayout>

</RelativeLayout>